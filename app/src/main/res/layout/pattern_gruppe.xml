<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/patternGruppe_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_patternGruppe"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/patterngruppe" />

    <TextView
        android:id="@+id/tv_patternGruppe"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/pattaya"
        android:gravity="center_horizontal|center_vertical"
        android:shadowColor="#FFFFFF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="6"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_patternGruppe"
        app:layout_constraintEnd_toEndOf="@+id/iv_patternGruppe"
        app:layout_constraintStart_toStartOf="@+id/iv_patternGruppe"
        app:layout_constraintTop_toTopOf="@+id/iv_patternGruppe"
        tools:text="example" />
</androidx.constraintlayout.widget.ConstraintLayout>